<Window
    x:Class="WinAPX.Gui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WinAPX">

    <Grid Padding="20" RowDefinitions="Auto,Auto,Auto,*" ColumnDefinitions="*,Auto">
        <!-- Row 0: Name box + Action button -->
        <TextBox Grid.Row="0" Grid.Column="0"
                 x:Name="envNameBox"
                 Margin="0,0,10,0"
                 PlaceholderText="Environment Name" />

        <Button Grid.Row="0" Grid.Column="1"
                x:Name="runButton"
                MinWidth="120"
                Content="Action"
                Click="Run_Click" />

        <!-- Row 1: Radio buttons -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Spacing="40"
                    Margin="0,10,0,0">
            <RadioButton x:Name="modeEnterRadio" Content="Enter" IsChecked="True" Checked="Mode_Checked"/>
            <RadioButton x:Name="modeCreateRadio" Content="Create" Checked="Mode_Checked"/>
            <RadioButton x:Name="modeDeleteRadio" Content="Delete" Checked="Mode_Checked"/>
        </StackPanel>

        <!-- Row 2: List/Clear on left, checkbox on right -->
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,18,0,0"
              ColumnDefinitions="Auto,Auto,*">
            <Button x:Name="listButton"
                    Grid.Column="0"
                    MinWidth="120"
                    Content="list"
                    Click="List_Click" />

            <Button Grid.Column="1"
                    MinWidth="120"
                    Margin="18,0,0,0"
                    Content="clear"
                    Click="Clear_Click" />

            <CheckBox x:Name="useCustomPathCheckBox"
                      Grid.Column="2"
                      Margin="24,0,0,0"
                      VerticalAlignment="Center"
                      Content="Do you want to (enter in a custom wdir/select an environment path)"
                      IsChecked="False" />
        </Grid>

        <!-- Row 3: Terminal output -->
        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                Margin="0,18,0,0"
                CornerRadius="18"
                Background="#FF2A2A2A"
                Padding="14">
            <ListView ItemsSource="{x:Bind logLines, Mode=OneWay}" />
        </Border>
    </Grid>
</Window>