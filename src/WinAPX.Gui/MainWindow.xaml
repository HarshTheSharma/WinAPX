<Window
    x:Class="WinAPX.Gui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WinAPX">

    <Grid Padding="12" RowDefinitions="Auto,Auto,*">
        <TextBlock Text="WinAPX"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
            <TextBox x:Name="envNameBox"
                     Width="260"
                     PlaceholderText="Environment name)" />
            <Button Content="Create" Click="Create_Click" />
            <Button Content="Enter" Click="Enter_Click" />
            <Button Content="Clear" Click="Clear_Click" />
        </StackPanel>

        <ListView Grid.Row="2"
                  Margin="0,12,0,0"
                  ItemsSource="{x:Bind logLines, Mode=OneWay}" />
    </Grid>
</Window>
